@model List<PostViewModel>

@{
    ViewData["Title"] = "Tim Herron - .Net Developer";

    Dictionary<string, string> metaTags = new Dictionary<string, string>();
    metaTags.Add("og:title", "Tim Herron - .Net Developer");
    metaTags.Add("twitter:title", "Tim Herron - .Net Developer");
    metaTags.Add("og:type", "website");
    metaTags.Add("og:url", "https://TimHerron.dev");
    metaTags.Add("og:description", "Professional Portfolio of Tim Herron");
    metaTags.Add("twitter:description", "Professional Portfolio of Tim Herron");
    metaTags.Add("og:image", "https://timherron.dev/images/tmh_meta.png");
    metaTags.Add("twitter:image", "https://timherron.dev/images/tmh_meta.png");
    metaTags.Add("twitter:url", "https://TimHerron.dev");
    metaTags.Add("twitter:domain", "https://TimHerron.dev");
    ViewData["MetaTags"] = metaTags;
}


<!--  Hero -->

<div class="flex flex-wrap items-center justify-center space-x-4 space-y-4">
    <div class="card shadow-lg max-w-xs xl:max-w-full xl:card-side bordered bg-base-100 lg:flex-1">
        <figure>
            <img class="h-72 max-w-xs xl:h-full" src="~/images/tmh_hs_400.png">
        </figure>
        <div class="card-body">
            <h2 class="card-title text-5xl">Who Am I?</h2>
            <p class="font-semibold">
                An enthusiastic developer exploring new technologies and while expanding a variety of skillsets.
                Formerly a museum educator working towards developing an open source Children's Museum Curation system, "Hey Curator!" Open to new opportunities or partnerships and always willing to lend a hand.
            </p>
            <div class="card-actions">
                <button class="btn btn-primary">
                    About Me
                </button>
                <button class="btn btn-secondary">
                    Hey Curator!
                </button>
            </div>
        </div>
    </div>
    @* Contact Form *@

    <div class="card w-96 lg:w-1/4 shadow-lg lg:card-side bordered bg-base-100 mx-auto ">
        <form class="bg-base-100 shadow-sm rounded-md p-8 min-w-full">
            <h1 class="text-base-content text-3xl font-bold mb-3">Contact Me</h1>
            <div class="form-control ">
                <label htmlFor="name" class="label">
                    <span class="label-text">Name: </span>
                </label>
                <input type="text" class="input input-bordered" placeholder="Enter your name..." />
            </div>
            <div class="form-control">
                <label htmlFor="email" class="label">
                    <span class="label-text">Email address: </span>
                </label>
                <input type="text" class="input input-bordered" placeholder="Email address..." />
            </div>
            <div class="form-control">
                <label htmlFor="message" class="label">
                    <span class="label-text">Inquiries/Comments: </span>
                </label>
                <textarea class="textarea h-24 textarea textarea-bordered">
            </textarea>
            </div>
            <div class="form-control mt-6">
                <button type="submit" class="btn btn-primary">
                    Submit Inquiry
                </button>
            </div>
        </form>
    </div>
</div>

<div class="px-6 py-8">
    <div class="pt-10 pb-12">
        <div class="inline-block text-2xl font-bold border-b-8 lg:text-7xl text-base-content border-primary">
            TMH Posts
        </div>
    </div>
    <div class="flex justify-center container mx-auto">



