<!DOCTYPE html>
<html lang="en" data-theme="garden">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TMH_ProfPort</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-base-100">
    <header class="sticky top-0 z-10 bg-base-100">
        <div class="flex flex-col space-y-2">
            <div class="p-4 pb-0 lg:p-8 lg:pb-0">
                <div class="navbar shadow-lg bg-neutral text-neutral-content rounded-box shadow-lg">
                    <a asp-controller="Home" asp-action="Index" class="flex-1 px-2 mx-2 lg:flex-none">
                        <span class="text-lg font-bold"> TimHerron.Dev </span>
                    </a>
                    <div class="justify-center flex-1 hidden px-2 mx-2 lg:flex">
                        <div class="flex items-stretch">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-ghost btn-sm rounded-btn"> Home </a>
                            <a asp-controller="Home" asp-action="Projects" class="btn btn-ghost btn-sm rounded-btn"> Projects </a>
                            <a asp-controller="Home" asp-action="About" class="btn btn-ghost btn-sm rounded-btn"> About </a>
                            <a asp-controller="Home" asp-action="HeyCurator" class="btn btn-ghost btn-sm rounded-btn"> Hey Curator! </a>
                        </div>
                    </div>
                    <div class="flex-none">
                        <a asp-controller="Home" asp-action="Contact" class="btn btn-square btn-ghost">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M3.00977 5.83789C3.00977 5.28561 3.45748 4.83789 4.00977 4.83789H20C20.5523 4.83789 21 5.28561 21 5.83789V17.1621C21 18.2667 20.1046 19.1621 19 19.1621H5C3.89543 19.1621 3 18.2667 3 17.1621V6.16211C3 6.11449 3.00333 6.06765 3.00977 6.0218V5.83789ZM5 8.06165V17.1621H19V8.06199L14.1215 12.9405C12.9499 14.1121 11.0504 14.1121 9.87885 12.9405L5 8.06165ZM6.57232 6.80554H17.428L12.7073 11.5263C12.3168 11.9168 11.6836 11.9168 11.2931 11.5263L6.57232 6.80554Z" fill="currentColor" />
                            </svg>
                        </a>
                        @*<button class="btn btn-square btn-ghost">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                            </button>*@
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="flex-grow block w-full overflow-x-hidden text-base-content">
        <ul class="menu w-16 py-3 mr-6 shadow-lg  rounded-box lg:hidden float-left">
            <li>
                <a asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-6 h-6 stroke-current" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z">
                        </path>
                        <polyline points="9 22 9 12 15 12 15 22">
                        </polyline>
                    </svg>
                </a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Projects">
                    <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24" fill="none" class="inline-block w-6 h-6 stroke-current" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="2" y="3" width="20" height="14" rx="2" ry="2">
                        </rect>
                        <line x1="8" y1="21" x2="16" y2="21">
                        </line>
                        <line x1="12" y1="17" x2="12" y2="21">
                        </line>
                    </svg>
                </a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="About">
                    <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-6 h-6 stroke-current" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-help-circle">
                        <circle cx="12" cy="12" r="10">
                        </circle>
                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3">
                        </path>
                        <line x1="12" y1="17" x2="12.01" y2="17">
                        </line>
                    </svg>
                </a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Contact">
                    <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-6 h-6 stroke-current" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                </a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="HeyCurator" class="font-semibold">
                    HC
                </a>
            </li>
        </ul>

        <div class="p-4 lg:m-0 lg:p-10 lg:pb-0">
            <div class="grid grid-cols-1 gap-6 lg:p-10 lg:pb-0 lg:m-0 rounded-box float-right">

                @RenderBody()

            </div>
        </div>
    </main>



    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - TMH_ProfPort - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
