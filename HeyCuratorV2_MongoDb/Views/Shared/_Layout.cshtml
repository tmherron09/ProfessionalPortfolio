<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tim Herron- .Net Developer</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/tailwind.css" />
    

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="flex items-center justify-between p-6 container mx-auto ">

            <a asp-controller="Home">
                <img src="~/svg/logo.svg" />
            </a>
            <div class="text-lg text-gray-600 hidden lg:flex">

                <a asp-controller="Home" class="block mt-4 lg:inline-block hover:text-green-200 lg:mt-0 mr-10">
                    Home
                </a>
                <a asp-controller="Feed" class="block mt-4 lg:inline-block hover:text-green-200 lg:mt-0 mr-10">
                    News/Articles
                </a>
                <a href="#" class="block mt-4 lg:inline-block hover:text-green-200 lg:mt-0 mr-10">
                    Portfolio
                </a>
                <a href="#" class="block mt-4 lg:inline-block hover:text-green-200 lg:mt-0 mr-10">
                    Services
                </a>
                <a href="#" class="block mt-4 lg:inline-block hover:text-green-200 lg:mt-0 mr-10">
                    Contact
                </a>
            </div>
            <div class="flex items-center">
                <div class="mr-5 hidden lg:inline-block lg:mr:0">
                    <button class="py-2 px-6 rounded-md text-gray-600 hover:text-gray-800 hover:bg-gray-200 text-lg focus:outline-none">Sign In</button>
                    <button class="py-2 px-6 bg-blue-500 hover:bg-blue-600 rounded-md text-white text-lg focus:outline-none">Sign Up</button>
                </div>

                @* TODO: Add Hamburger menu logic *@
                <div class="block lg:hidden">
                    <button class="flex items-center px-4 py-3 border rounded-md text-blue-500 border-blue-500 focus:outline-none" onclick="responsiveMenu()">
                        <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <title>Menu</title>
                            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
                        </svg>
                    </button>
                </div>
            </div>

        </nav>
        <div id="responsiveLinks" style="display: none;">
            <a asp-controller="Home" class="block py-2 pl-3 text-xl bg-gray-200">
                Home
            </a>
            <a asp-controller="Feed" class="block py-2 pl-3 hover:text-gray-800 text-xl bg-gray-50">
                News/Articles
            </a>
            <a href="#" class="block py-2 pl-3 hover:text-gray-800 text-xl bg-gray-200">
                Portfolio
            </a>
            <a href="#" class="block py-2 pl-3 hover:text-gray-800 text-xl bg-gray-50">
                Services
            </a>
            <a href="#" class="block py-2 pl-3 hover:text-gray-800 text-xl bg-gray-200 ">
                Contact
            </a>
        </div>
    </header>


    <main role="main" class="mt-12 lg:mt-32 sm:w-screen sm:mx-0">
        @RenderBody()
    </main>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - Tim Herron - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react/16.13.0/umd/react.development.js"></script>
    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.13.0/umd/react-dom.development.js"></script>
    @RenderSection("Scripts", required: false)
    <script>

        function responsiveMenu() {
            console.log("Yummy Hamburger!");
            var menu = document.getElementById("responsiveLinks");
            if (menu.style.display === "none") {
                menu.style.display = "block";
            } else {
                menu.style.display = "none"
            }
        }

    </script>
</body>
</html>
