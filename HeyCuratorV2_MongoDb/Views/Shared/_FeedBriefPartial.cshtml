@model tmherronProfessionalSite.ViewModel.FeedBriefViewModel

@{
    Random rng = new Random();

    string[][] twColors = new string[][] {
        new string[] { "yellow", "red" },
        new string[] { "green", "blue" },
        new string[] { "indigo", "purple" },
        new string[] { "purple", "pink" },
        new string[] { "pink", "red" },
        new string[] {"yellow", "pink"},
        new string[] {"green", "pink"},
        new string[] {"blue", "red"}
        };

    string[] fromColor =
    {
        "from-saffron-300",
        "from-totem-pole-300",
        "from-purple-heart-300",
        "from-viking-300",
        "from-magic-mint-300"
    };

    string[] toColor =
    {
        "to-saffron-300",
        "to-totem-pole-300",
        "to-purple-heart-300",
        "to-viking-300",
        "to-magic-mint-300"
    };

    string[] bgColor =
    {
        "bg-saffron-600",
        "bg-totem-pole-600",
        "bg-purple-heart-600",
        "bg-viking-600",
        "bg-magic-mint-600"
    };
    string[] textColor =
    {
        "text-saffron-900",
        "text-totem-pole-900",
        "text-purple-heart-900",
        "text-viking-900",
        "text-magic-mint-900"
    };

    int rngColorOne = rng.Next(fromColor.Length);
    int rngColorTwo = rng.Next(toColor.Length);

}

<article class="w-full lg:p-6 lg:w-8/12 flex items-center mb-24 mx-auto post_pulse">

    <section class="sm:px-0 md:w-11/12 relative lg:w-2/3  lg:mx-auto cursor-pointer" @*onclick="location.href='/feed/@Model.Id'"*@>
        <div class="hidden md:block  w-48 lg:w-48  inset-y-0 -right-0 absolute bg-gradient-to-r @fromColor[rngColorOne] @toColor[rngColorTwo] opacity-70 rounded-md transform rotate-45 lg:-skew-y-6 lg:scale-105 z-0 cursor-default"></div>
        <a asp-controller="Feed" asp-action="Entry" asp-route-id="@Model.Id">
            <div class="relative w-full bg-gray-50 shadow-inner rounded-t-md px-8 pt-4 pb-4">
                <h3 class="text-3xl font-semibold text-gray-700 text-opacity-80 leading-tight mb-1">@Model.Title</h3>
                <h5 class="text-xl text-gray-500 mb-2 ">@Model.Tagline</h5>
                <hr class="border border-gray-400 mb-2 mr-6" />
                <p class="text-base text-gray-400 pl-3 pr-12">@Model.BriefText</p>
            </div>
            <div class=" relative w-full @bgColor[rngColorOne] bg-opacity-50 rounded-b-md font-serif px-8 py-2">
                <span class="@textColor[rngColorOne] font-bold">Tim Herron</span>
                <span class="float-right text-gray-50">January 19th, 2020</span>
            </div>
        </a>
    </section>

</article>
